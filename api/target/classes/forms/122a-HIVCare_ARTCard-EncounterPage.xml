        function enable_disable_fp(enableDisablePregnant){

        var chkd = $(enableDisablePregnant).find(":checkbox").attr('checked');

        $(".EnableDisablePregnantChild").find("input").attr("disabled",chkd);

        }


        function enable_disable_ar(enableDisable_adherenceReason){

        var adherence_combo = $(enableDisable_adherenceReason).find('select');

        var selected_value = jQuery.trim(adherence_combo.find(":selected").text());

        var disable = selected_value.toUpperCase()
        =="GOOD"
        $(".EnableDisableAdherenceReasonChild").find("input").attr("disabled",disable );

        }


        function enable_disable_fpm(enableDisable_fpmethod){

        var fp_combo = $(enableDisable_fpmethod).find('select');

        var selected_value = jQuery.trim(fp_combo.find(":selected").text());

        var disable = selected_value.toUpperCase()
        !="YES"
        $(".EnableDisablefpmethodchild").find("input").attr("disabled",disable );

        }


        function enable_disable_tb(enableDisable_tbstatus){

        var tb_combo = $(enableDisable_tbstatus).find('select');

        var selected_value = jQuery.trim(tb_combo.find(":selected").text());

        var disable = selected_value.toUpperCase()
        !="4. TB RX"
        $(".EnableDisabletbstatuschild").find("input").attr("disabled",disable );

        }


        function enable_disable_r(enableDisable_regimen){


        var regimen_combo = $(enableDisable_regimen).find('select');

        var regimen_value = jQuery.trim(regimen_combo.find(":selected").text());

        var disable = regimen_value.toUpperCase()
        != "OTHER"


        $(".EnableDisableRegimenChild").find("input").attr("disabled",disable );
        }

        if(jQuery){
        $(document).ready(function(){
        if ( $.browser.msie ) {
