    <script type="text/javascript">
        function enable_disable_art_yes_no(selected_option) {

            var class_name = jq(selected_option).attr("class");

            var length = class_name.length;

            var class_id = parseInt(class_name.substring(length - 1, length))

            var row_id = class_id;

            var disable = true;

            var row_1 = '[class^="ARTYesNo"][class*="Child1"]';
            var row_2 = '[class^="ARTYesNo"][class*="Child2"]';
            var row_3 = '[class^="ARTYesNo"][class*="Child3"]';
            var row_4 = '[class^="ARTYesNo"][class*="Child4"]';

            var row_5 = '[class^="ARTYesNo"][class*="Child5"]';
            var row_6 = '[class^="ARTYesNo"][class*="Child6"]';
            var row_7 = '[class^="ARTYesNo"][class*="Child7"]';
            var row_8 = '[class^="ARTYesNo"][class*="Child8"]';

            var row_9 = '[class^="ARTYesNo"][class*="Child9"]';

            var xx = row_1;
            var selected_value = jq(selected_option).find(":selected").text()

            selected_value = selected_value.trim().toLowerCase();

            if (selected_value == "yes") {
                disable = false;
            }

            switch (row_id) {
                case 1:
                    xx = row_1;
                    break;
                case 2:
                    xx = row_2;
                    break;
                case 3:
                    xx = row_3;
                    break;
                case 4:
                    xx = row_4;
                    break;

                case 5:
                    xx = row_5;
                    break;
                case 6:
                    xx = row_6;
                    break;
                case 7:
                    xx = row_7;
                    break;
                case 8:
                    xx = row_8;
                    break;
                case 9:
                    xx = row_9;
                    break;


            }


            jq(xx).each(function () {
                var group = jq(this);

                if (class_name.indexOf('Child') == -1) {

                    group.find("input").attr("disabled", disable);
                    // group.find("input").attr("value", "");
                    // group.find('select').prop("selectedIndex", 0);
                    group.find('select').attr("disabled", disable);
                }
            });
        }

        function enable_disable_adherence(selected_option) {

            var class_name = jq(selected_option).attr("class");

            var length = class_name.length;

            var class_id = parseInt(class_name.substring(length - 1, length))

            var row_id = class_id;

            var disable = true;

            var row_1 = '[class^="Adherence"][class*="Child1"]';
            var row_2 = '[class^="Adherence"][class*="Child2"]';
            var row_3 = '[class^="Adherence"][class*="Child3"]';
            var row_4 = '[class^="Adherence"][class*="Child4"]';

            var row_5 = '[class^="Adherence"][class*="Child5"]';
            var row_6 = '[class^="Adherence"][class*="Child6"]';
            var row_7 = '[class^="Adherence"][class*="Child7"]';
            var row_8 = '[class^="Adherence"][class*="Child8"]';

            var row_9 = '[class^="Adherence"][class*="Child9"]';

            var xx = row_1;
            var selected_value = jq(selected_option).find(":selected").text()

            selected_value = selected_value.trim().toLowerCase();

            if (selected_value != "good") {
                disable = false;
            }

            switch (row_id) {
                case 1:
                    xx = row_1;
                    break;
                case 2:
                    xx = row_2;
                    break;
                case 3:
                    xx = row_3;
                    break;
                case 4:
                    xx = row_4;
                    break;

                case 5:
                    xx = row_5;
                    break;
                case 6:
                    xx = row_6;
                    break;
                case 7:
                    xx = row_7;
                    break;
                case 8:
                    xx = row_8;
                    break;
                case 9:
                    xx = row_9;
                    break;
            }
            jq(xx).each(function () {
                var group = jq(this);
                if (class_name.indexOf('Child') == -1) {
                    group.find("input").attr("disabled", disable);
                }
            });
        }

        function enable_disable_district_tb_reg(selected_option) {

            var class_name = jq(selected_option).attr("class");

            var length = class_name.length;

            var class_id = parseInt(class_name.substring(length - 1, length))

            var row_id = class_id;

            var disable = true;
            var requires = false;

            var row_1 = '[class^="DistrictTbReg"][class*="Child1"]';

            var xx = row_1;
            var selected_value = jq(selected_option).find(":selected").text()

            selected_value = selected_value.trim().toLowerCase();

            if (selected_value == "tb rx") {
                disable = false;
                requires = true;
            }

            switch (row_id) {
                case 1:
                    xx = row_1;
                    break;
            }


            jq(xx).each(function () {
                var group = jq(this);

                if (class_name.indexOf('Child') == -1) {
                    // group.find("input").attr("value", "");
                    group.find("input").attr("required", requires);
                    // group.find('select').prop("selectedIndex", 0);
                    group.find("input").attr("disabled", disable);
                    group.find('select').attr("disabled", disable);
                    if (requires == false) {
                        group.find('.required').show();
                    }
                    else if (requires == true) {
                        group.find('.required').hide();
                    }
                }
            });
        }


        if (jQuery) {
            jq(document).ready(function () {
                if (jq.browser.msie) {
                    jq(":checkbox").click(function () {
                        jq(this).change();
                    });
                }

                jq('[class^="ARTYesNoEnableDisable"]').change(function () {
                    enable_disable_art_yes_no(jq(this));
                });

                jq('[class^="ARTYesNoEnableDisable"]').each(function () {
                    enable_disable_art_yes_no(jq(this));
                });

                jq('[class^="DistrictTbRegEnableDisable"]').change(function () {
                    enable_disable_district_tb_reg(jq(this));
                });

                jq('[class^="DistrictTbRegEnableDisable"]').each(function () {
                    enable_disable_district_tb_reg(jq(this));
                });

                jq('[class^="AdherenceEnableDisable"]').change(function () {
                    enable_disable_adherence(jq(this));
                });

                jq('[class^="AdherenceEnableDisable"]').each(function () {
                    enable_disable_adherence(jq(this));
                });

                jq(".enableDisable").each(function () {
                    var group = jq(this);

                    function disableFn() {
                        group.children("#disabled").fadeTo(250, 1);
                        group.children("#disabled").find(":checkbox").attr("checked", false); //uncheck
                        // group.children("#disabled").find("input[type$='text']").val("");
                        group.children("#disabled").find("input").attr("disabled", true); //disable
                        group.children("#disabled").find("select").attr("disabled", true);
                    }

                    function enableFn() {
                        group.children("#disabled").fadeTo(250, 1);
                        group.children("#disabled").find("input").attr("disabled", false);
                        group.children("#disabled").find("select").attr("disabled", false);

                    }

                    disableFn();
                    jq(this).children("#trigger").find(":checkbox:first").change(function () {
                        var checked = jq(this).attr("checked");
                        if (checked == "checked") {
                            enableFn();
                        } else {
                            disableFn();
                        }
                    });
                });
            });
        }
    </script>

