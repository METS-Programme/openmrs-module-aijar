<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>${project.parent.groupId}.${project.parent.artifactId}</package>
	<author>METS Program</author>
	<description>
		${project.parent.description}
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf</updateURL>
	<require_version>${openMRSVersion}</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>${project.parent.groupId}.${project.parent.artifactId}.AijarActivator</activator>
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>${project.parent.groupId}.${project.parent.artifactId}.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>

		aijar.hbm.xml

	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

	<!-- Required Modules -->

	<require_modules>
		<require_module>
			org.openmrs.module.appframework
		</require_module>
		<require_module>
			org.openmrs.module.dataexchange
		</require_module>
		<require_module>
			org.openmrs.module.emrapi
		</require_module>
		<require_module>
			org.openmrs.module.formentryapp
		</require_module>
		<require_module>
			org.openmrs.module.htmlformentry
		</require_module>
		<require_module>
			org.openmrs.module.htmlformentryui
		</require_module>
		<require_module>
			org.openmrs.module.idgen
		</require_module>
		<require_module>
			org.openmrs.module.metadatadeploy
		</require_module>
		<require_module>
			org.openmrs.module.reporting
		</require_module>
		<require_module>
			org.openmrs.module.registrationapp
		</require_module>
		<require_module>
			org.openmrs.module.registrationcore
		</require_module>
		<require_module>
			org.openmrs.module.uiframework
		</require_module>
	</require_modules>

	<!-- Global Properties -->
	<globalProperty>
		<property>aijar.healthCenterName</property>
		<defaultValue>Health Center Name</defaultValue>
		<description>
			Allows one to set the name of the health center for this installation
		</description>
	</globalProperty>

</module>

